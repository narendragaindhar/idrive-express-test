.row
  .col-sm-8.offset-sm-2.col-md-6.offset-md-3
    = simple_form_for @user, url: (@token ? password_path(@token) : passwords_path) do |f|
      %fieldset.card
        .card-block
          - if @token
            = f.input :password
            = f.input :password_confirmation
          - else
            = f.input :email
        .card-footer
          - if @token.present?
            %button.btn.btn-block.btn-primary{type: 'submit', data: {disable_with: 'Resetting...'}}= fa_icon 'key', text: 'Reset my password'
          - else
            %button.btn.btn-block.btn-primary{type: 'submit', data: {disable_with: 'Sending...'}}= fa_icon 'key', text: 'Send password reset email'
